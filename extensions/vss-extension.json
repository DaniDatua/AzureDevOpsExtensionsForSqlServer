{
    "manifestVersion": 1,
    "id": "AzureDevOpsExtensionsForSqlServer",
    "name": "Microsoft SQL Server Deployment Tasks for Azure Pipelines",
    "version": "1.0.15",
    "publisher": "DrJohnExtensions",
    "description": "Deploy databases, publish DACPACs",
    "public": true,
    "categories": [
        "Build and release"
    ],
    "tags": [
        "deploy",
        "build",
        "sqldatabase",
        "sqlpackage"
    ],
    "icons": {
        "default": "images/SqlServerIcon.png"
    },
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "screenshots": [
        {
            "path": "images/SqlServerIconLarge.png"
        },
        {
            "path": "images/AzureDevOpsTaskDetail.png"
        },
        {
            "path": "images/AzureDevOpsPipelineVariables.png"
        }
    ],


    "links": {
        "getstarted": {
            "uri": "https://github.com/DrJohnT/AzureDevOpsExtensionsForSqlServer/wiki"
        },
        "issues": {
            "uri": "https://github.com/DrJohnT/AzureDevOpsExtensionsForSqlServer/issues"
        },
        "repository": {
            "uri": "https://github.com/DrJohnT/AzureDevOpsExtensionsForSqlServer"
        }
    },
    "branding": {
        "color": "#f6f7fb",
        "theme": "light"
    },

    "scopes": [
        "vso.build_execute",
        "vso.serviceendpoint_manage"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "files": [
        {
            "path": "PublishDacPacTask"
        }
    ],
    "contributions": [
        {
            "id": "PublishDacPacTask",
            "type": "ms.vss-distributed-task.task",
            "targets": [
            "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PublishDacPacTask"
            }
        }
    ]
}